extends ../layout/main-layout.pug


block Content
    .row 
        if products.length > 0
            table.table.table-bordered 
                thead 
                    tr 
                        th Image
                        th Product
                        th Price
                        th 
                tbody 
                    each product in products 
                        tr 
                            td 
                                img(src=`/img/${product.imageURL}` width='80')
                            td #{product.name}
                            td #{product.price} TL 
                            td
                                a.btn.btn-primary.btn-sm(href=`/admin/products/${product.id}`) details
        else 
            h1 No Products
