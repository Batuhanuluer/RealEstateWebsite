extends ../layout/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/form.css")


block Content
    form(action="/admin/edit-product" method="post")
        .form-group.row
            label(for="name" ).col-sm-2.col-form-label Product Name 
            .col-sm-10
                input.form-control#name(type="text"  name="name")
        .form-group.row
            label(for="price" ).col-sm-2.col-form-label Price 
            .col-sm-10
                input.form-control#price(type="text"  name="price")
        .form-group.row
            label(for="image" ).col-sm-2.col-form-label Image  
            .col-sm-10
                input.form-control#image(type="text"  name="image")
        .form-group.row
            label(for="description" ).col-sm-2.col-form-label Description 
            .col-sm-10
                input.form-control#description(type="text"  name="description")               

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary
            


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js") 

 


